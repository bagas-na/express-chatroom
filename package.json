{
  "name": "express-chat-websocket",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i ./assets/tailwind.css -o ./public/css/style.css",
    "start": "node ./server/app.js",
    "dev:express": "nodemon ./server/app.js",
    "dev:tailwindcss": "tailwindcss -i ./dev/tailwind.css -o ./public/css/style.css --watch=always",
    "dev": "concurrently -n express,tailwind -c green,cyan \"npm run dev:express\" \"npm run dev:tailwindcss\"",
    "init:db": "node ./database/initdb.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "argon2": "^0.44.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16"
  },
  "nodemonConfig": {
    "ignore": [
      "./data/**",
      "./node_modules/**",
      "./public/**"
    ],
    "delay": 2500
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailinGComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "plugins": ["prettier-plugin-tailwindcss"]
  }
}
